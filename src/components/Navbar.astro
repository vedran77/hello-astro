---

type NavbarItem = {
    title: string;
    path: string;
}

const items: NavbarItem[] = [
    {
        title: 'Home',
        path: '/'
    },
    {
        title: 'Blog',
        path: '/blog'
    },
    {
        title: 'About',
        path: '/about'
    },
]

---

<div class="px-48 flex justify-evenly">
    <div class="flex bg-red">
        Blazingly Fast Blog
    </div>

    <div>
        <ul>
            {items.map((item: NavbarItem) => (
                <li><a href={item.path}>{item.title}</a></li>
            ))}
        </ul>
    </div>
</div>